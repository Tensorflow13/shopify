<footer class="footer-main">
  <div class="footer-content container">
    <div class="footer-section footer-about">
      {%- if section.settings.footer_logo != blank -%}
        <a href="{{ routes.root_url }}" class="footer-logo-link">
          {{ section.settings.footer_logo | image_url: width: 400 | image_tag: alt: section.settings.footer_logo.alt, width: 150, class: 'footer-logo' }}
        </a>
      {%- else -%}
        <p class="footer-logo-text"><a href="{{ routes.root_url }}">{{ shop.name }}</a></p>
      {%- endif -%}
      {%- if section.settings.footer_text != blank -%}
        <p class="footer-text">{{ section.settings.footer_text }}</p>
      {%- endif -%}
    </div>

    <div class="footer-section footer-links">
      {% for i in (1..3) %}
        {%- assign menu_id = 'menu_link_list_' | append: i -%}
        {%- assign menu = section.settings[menu_id] -%}
        {%- if menu != blank -%}
          <div class="footer-menu">
            <h4 class="footer-menu-heading">{{ menu.title }}</h4>
            <ul>
              {% for link in menu.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {%- endif -%}
      {% endfor %}
    </div>

    <div class="footer-section footer-collections">
      <div class="footer-menu">
        <h4 class="footer-menu-heading">Collections</h4>
        <ul>
          {% for collection in collections %}
            <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="footer-section footer-contact">
      <div class="footer-menu">
        <h4 class="footer-menu-heading">Contact</h4>
        <ul>
          {%- if shop.email != blank -%}
            <li><a href="mailto:{{ shop.email }}">{{ shop.email }}</a></li>
          {%- endif -%}
          {%- if shop.phone != blank -%}
            <li><a href="tel:{{ shop.phone }}">{{ shop.phone }}</a></li>
          {%- endif -%}
        </ul>
      </div>
    </div>

    <div class="footer-section footer-legal">
      {%- assign legal_menu = section.settings.menu_link_list_legal -%}
      {%- if legal_menu != blank -%}
        <div class="footer-menu">
          <h4 class="footer-menu-heading">Legal</h4>
          <ul>
            {% for link in legal_menu.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {%- endif -%}
    </div>

    <div class="footer-section footer-social">
      {%- if section.settings.show_social_icons -%}
        <div class="social-icons">

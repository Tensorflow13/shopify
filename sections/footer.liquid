        </div>
      {%- endif -%}
      <div class="footer-copyright">
        <p>&copy; {{ 'now' | date: "%Y" }}, {{ shop.name }}</p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Custom Footer",
    "settings": [
      { "type": "header", "content": "Footer Content" },
      { "type": "image_picker", "id": "footer_logo", "label": "Logo for footer" },
      { "type": "richtext", "id": "footer_text", "label": "Text", "default": "<p>A short description about your store.</p>" },
      { "type": "header", "content": "Link Lists" },
      { "type": "link_list", "id": "menu_link_list_1", "label": "Menu 1" },
      { "type": "link_list", "id": "menu_link_list_2", "label": "Menu 2" },
      { "type": "link_list", "id": "menu_link_list_3", "label": "Menu 3" },
      { "type": "link_list", "id": "menu_link_list_legal", "label": "Legal Menu" },
      { "type": "header", "content": "Social Media" },
      { "type": "checkbox", "id": "show_social_icons", "label": "Show social media icons", "default": true },
      { "type": "text", "id": "social_instagram_link", "label": "Instagram link" },
      { "type": "text", "id": "social_pinterest_link", "label": "Pinterest link" },
      { "type": "text", "id": "social_facebook_link", "label": "Facebook link" }
    ]
  }
{% endschema %}
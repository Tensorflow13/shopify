{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-links-{{ ai_gen_id }} {
    padding: 80px 20px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  .ai-collection-links-container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-collection-links-heading-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: bold;
    margin: 0 0 60px;
    color: {{ block.settings.text_color }};
  }

  .ai-collection-links-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 60px;
  }

  .ai-collection-card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.6s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}.ai-visible-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-collection-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.card_height }}px;
    overflow: hidden;
  }

  .ai-collection-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-card-image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-collection-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height:100%;
    background-color: #2a2a2a;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-card-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
    color: #666;
  }

  .ai-collection-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 30px;
  }

  .ai-collection-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: bold;
    margin: 0 0 10px;
    color: #ffffff;
  }

  .ai-collection-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    line-height: 1.5;
    margin: 0 0 20px;
    color: #ffffff;
    opacity: 0.9;
  }

  .ai-collection-card-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: transparent;
    color: #ffffff;
    border: 2px solid #ffffff;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .ai-collection-card-button-{{ ai_gen_id }}:hover {
    background-color: #ffffff;
    color: #000000;
  }

  .ai-collection-card-button-arrow-{{ ai_gen_id }} {
    transition: transform 0.3s ease;
  }

  .ai-collection-card-button-{{ ai_gen_id }}:hover .ai-collection-card-button-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-all-collections-button-wrapper-{{ ai_gen_id }} {
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }

  .ai-all-collections-button-wrapper-{{ ai_gen_id }}.ai-visible-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-all-collections-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background-color: transparent;
    color: {{ block.settings.text_color }};
    border: 2px solid {{ block.settings.text_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-all-collections-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.text_color }};
    color: {{ block.settings.background_color }};
  }

  .ai-all-collections-button-arrow-{{ ai_gen_id }} {
    transition: transform 0.3s ease;
  }

  .ai-all-collections-button-{{ ai_gen_id }}:hover .ai-all-collections-button-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  @media screen and (max-width: 768px) {
    .ai-collection-links-{{ ai_gen_id }} {
      padding: 60px 20px;
    }

    .ai-collection-links-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 40px;
    }

    .ai-collection-links-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 40px;
    }

    .ai-collection-card-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.card_height | times: 0.8 }}px;
    }

    .ai-collection-card-overlay-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-collection-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_title_size | times: 0.9 }}px;
    }

    .ai-collection-card-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_description_size | times: 0.9 }}px;
    }

    .ai-all-collections-button-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: 14px;
    }
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: bold;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-color-light);
  }
  .section-title span {
    color: var(--text-color-light);
  }
  .grid {
    display: grid;
    gap: 1rem;
  }
  .grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    margin-right: -12%;
  }
  .card {
    background: var(--primary-dark);
    border-radius: 8px;
    overflow: hidden;
    transition: transform var(--transition-time) ease, box-shadow var(--transition-time) ease;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px var(--shadow-medium);
  }
  .card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    opacity: 1;
  }
  .card-content {
    padding: 1.5rem;
  }
  .card-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: var(--text-color-light);
  }
  .card-text {
    color: #ccc;
    margin-bottom: 1rem;
  }
  .card-link {
    color: var(--primary-light);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-time) ease;
  }
  .card-link:hover {
    color: var(--accent-subtle);
  }
  .card-layout {
    background: var(--black); /* Black background */
    color: var(--white); /* White text */
    border-radius: 12px;
    padding: 2rem;
    margin: 1rem 0;
    box-shadow: 0 8px 24px var(--shadow-medium);
    border: 1px solid var(--medium-grey); /* Add border to card-layout */
  }
  .card-layout:hover {
    transform: translateY(-4px);
  }
  #collections .card img, #blog .card img {
    height: 250px;
    object-fit: cover;
  }
  @media screen and (max-width: 768px) {
    .grid-3 {
      grid-template-columns: 1fr;
      margin-right: 2%;
    }
  }
{% endstyle %}

<div class="card-layout">
  <h2 class="section-title"><span>{{ block.settings.heading }}</span></h2>
  <div class="grid grid-3">
    {% for i in (1..3) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign title_key = 'collection_' | append: i | append: '_title'
        assign description_key = 'collection_' | append: i | append: '_description'
        assign image_key = 'collection_' | append: i | append: '_image'
        assign button_text_key = 'collection_' | append: i | append: '_button_text'
        assign collection = block.settings[collection_key]
        assign title = block.settings[title_key]
        assign description = block.settings[description_key]
        assign image = block.settings[image_key]
        assign button_text = block.settings[button_text_key]
      %}
      <div class="card">
        {% if image %}
          <img src="{{ image | image_url: width: 600 }}" alt="{{ image.alt | escape }}" loading="lazy" width="600" height="250">
        {% else %}
          <div class="ai-collection-card-placeholder">
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="card-content">
          <div class="card-title">{{ title }}</div>
          <div class="card-text">{{ description }}</div>
          {% if collection %}
            <a href="{{ collection.url }}" class="card-link">{{ button_text }} &rarr;</a>
          {% else %}
            <a href="#" class="card-link">{{ button_text }} &rarr;</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  <div style="text-align:center; margin-top:2rem;">
    {% if block.settings.all_collections_link %}
      <a href="{{ block.settings.all_collections_link }}" class="card-link" style="font-size:1.1rem; padding:1rem 2.5rem; border:2px solid var(--primary-light); border-radius:8px; background:transparent; text-transform:uppercase; font-weight:700; transition:all var(--transition-time) ease;">
        {{ block.settings.all_collections_text }} &rarr;
      </a>
    {% else %}
      <a href="/collections" class="card-link" style="font-size:1.1rem; padding:1rem 2.5rem; border:2px solid var(--primary-light); border-radius:8px; background:transparent; text-transform:uppercase; font-weight:700; transition:all var(--transition-time) ease;">
        {{ block.settings.all_collections_text }} &rarr;
      </a>
    {% endif %}
  </div>
</div>


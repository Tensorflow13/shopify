{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clients-showcase-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .ai-clients-showcase-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateY(0);
  }


.ai-clients-showcase-container-{{ ai_gen_id }} {
  width: 85vw;   
  max-width: none; 
  margin: 0;     
  padding: 0;      
}


  .ai-clients-showcase-heading-{{ ai_gen_id }} {
    font-family: 'Playfair Display', serif;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600; 
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px;
    line-height: 1.2;
    letter-spacing: -0.5px;
     text-align: center;
  }

    .ai-clients-showcase-description-{{ ai_gen_id }} {
    font-family: 'Inter', 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ block.settings.description_size }}px;
    font-weight: 300;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.description_margin }}px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
    opacity: 0.85;
    text-align: center;
  }
  .ai-clients-showcase-heading-{{ ai_gen_id }},
  .ai-clients-showcase-description-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .ai-clients-showcase-{{ ai_gen_id }}.visible 
  .ai-clients-showcase-heading-{{ ai_gen_id }},
  .ai-clients-showcase-{{ ai_gen_id }}.visible 
  .ai-clients-showcase-description-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }
  .ai-clients-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    justify-items: center;
    align-items: center;
    margin-top: {{ block.settings.grid_margin }}px;
    width: 100%;
  }

  .ai-clients-showcase-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.logo_padding }}px;
    border-radius: {{ block.settings.logo_border_radius }}px;
    transition: all 0.3s ease;
    background: #fff;
    box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    width: 100%;
    max-width: 160px;
    height: 100px;
  }

  .ai-clients-showcase-logo-{{ ai_gen_id }} img {
    max-width: 100%;
    max-height: 70px; /* taller than before, better balance */
    object-fit: contain;
  }

  .ai-clients-showcase-logo-{{ ai_gen_id }}:hover {
    filter: grayscale(0%) brightness(100%);
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow_blur }}px {{ block.settings.hover_shadow_spread }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity | divided_by: 100.0 }});
  }

  @media screen and (max-width: 990px) {
    .ai-clients-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    }
  }

  @media screen and (max-width: 749px) {
    .ai-clients-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    }

    .ai-clients-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 15px;
    }
  }
{% endstyle %}


<clients-showcase-{{ ai_gen_id }}
  class="ai-clients-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-clients-showcase-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-clients-showcase-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-clients-showcase-description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    <div class="ai-clients-showcase-grid-{{ ai_gen_id }}">
      {% for i in (1..16) %}
        {% assign logo_key = 'logo_' | append: i %}

        {% assign logo = block.settings[logo_key] %}


        {% if logo != blank %}
          <div class="ai-clients-showcase-logo-{{ ai_gen_id }}">
            <img
              src="{{ logo | image_url: width: 320 }}"
              alt="{{ logo.alt | escape }}"
              loading="lazy"
              width="{{ logo.width }}"
              height="{{ logo.height }}"
            >
          </div>
        {% endif %}

      {% endfor %}
    </div>
  </div>
</clients-showcase-{{ ai_gen_id }}><script>
  (function() {
    class ClientsShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.observer = null;
      }

      connectedCallback() {
        this.setupScrollReveal();
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }

      setupScrollReveal() {
        this.observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                this.observer.unobserve(entry.target);
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
          }
        );

        this.observer.observe(this);
      }
    }

    customElements.define('clients-showcase-{{ ai_gen_id }}', ClientsShowcase{{ ai_gen_id }});
  })();
</script>

